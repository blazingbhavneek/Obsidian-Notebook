{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build CUDA",
      "type": "shell",
      "command": "/usr/local/cuda/bin/nvcc",
      "args": [
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "${file}"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}